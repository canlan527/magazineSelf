/* pages/mark/mark.wxss */
.user-container{
  display: flex;
  flex-direction: column;
  padding:0 30rpx;
  background:#fff;
}
.user-info{
  display: flex;
  justify-content: space-between;
  margin-bottom: 50rpx;
}
.user-name{
  font-size: 40rpx;
}
.user-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden
}
.user-avatar image{
  width:100rpx;
  height: 100rpx;
}
.share image{
  width:50rpx;
  height: 50rpx;
  margin-top:30rpx;
  margin-bottom:30rpx;
}
.get-user-info{
  padding:0;
  border:0;
}